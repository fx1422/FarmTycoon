@import "common/index.styl"
.item-1 {
	height $height_1
	width 100%
	background-color #3BA5FB
	.top {
		height 38%
		width 100%
		background-color aqua
		display flex
		justify-content flex-end
		box-sizing border-box
		align-items center
		.list {
			height 85%
			width 1.6rem
			background-color #fa3716
			margin-right 0.4rem
			border-radius 50%
		}
		.list:hover {
			background-color #8e200c
		}
	}
	.bot {
		height 62%
		width 100%
		display flex
		justify-content space-between
		box-sizing border-box
		padding 0 0.4rem
		align-items center
		.list {
			height 100%
			width 30%
			background-color #ffa955
			background url("../img/1.png") center no-repeat
			background-size contain
		}
	}
}

.item-2 {
	height $height_2
	width 100%
	background-color #84A942
	box-sizing border-box
	padding 0 0.4rem
	.top {
		height 25%
		width 100%
		background-color antiquewhite
		display flex
		flex-direction column
		justify-content center
		.list-1 {
			height 75%
			display flex
			justify-content space-between
			align-items flex-end
			.list-icon {
				border-radius 12px
				height 80%
				width 5.6rem
				background-color #FFD2AB
				border 2px solid #335C49
				box-sizing border-box
				position relative
				.list-type {
					position absolute
					bottom 0
					left 0
					right 0
					margin auto
					width 3rem
					font-size 0.6rem
					background-color black
					opacity 0.5
					color #ffffff
					text-align center
					border-top-left-radius 3px
					border-top-right-radius 3px
				}
				.list-tips {
					position absolute
					right 0
					top 0.6rem
					width 1rem
					background-color #1977BC
					color white
					font-size 0.5rem
					text-align center
					border-bottom-left-radius 3px
					border-top-left-radius 3px
				}
			}
		}
		.list-2 {
			display flex
			justify-content space-between
			height 25%
			width 100%
			margin-top 1px
			.list-rate {
				font-size 0.7rem
				border-radius 3px
				display flex
				align-items center
				justify-content center
				height 80%
				width 2.4rem
				background-color #258897
				color white
			}
		}
		
	}
	
	.bot{
		height 75%
		width 100%
		display flex
		justify-content space-between
		.left,.right{
			width 44%
			height 100%
			.top-sub{
				display flex
				justify-content space-between
				align-items center
				height 30%
				.item{
					height 2.6rem
					width 48%
					background-color #848efa
					position relative
					.item-type{
						position absolute
						bottom:-0.4rem
						left 0
						right 0
						margin auto
						width 3rem
						font-size 0.6rem
						background-color black
						opacity 0.5
						color #ffffff
						text-align center
						border-top-left-radius 3px
						border-top-right-radius 3px
					}
					.item-tips {
						position absolute
						right 0
						top 0.4rem
						width 1rem
						background-color #1977BC
						color white
						font-size 0.5rem
						text-align center
						border-bottom-left-radius 3px
						border-top-left-radius 3px
					}
				}
				
			}
			.bot-sub{
				//background-color #557F33
				height 70%
				display flex
				flex-wrap wrap
				justify-content space-between
				align-items center
				width 100%
				.bot-sub-left,.bot-sub-right{
					display flex
					flex-direction column
					width 48%
					height 100%
					justify-content space-around
					background-color #557F33
					align-items center
					border-radius 6px
					.item{
						height 2.6rem
						width 90%
						background-color #848efa
						position relative
						.item-type{
							position absolute
							bottom:-0.4rem
							left 0
							right 0
							margin auto
							width 3rem
							font-size 0.6rem
							background-color black
							opacity 0.5
							color #ffffff
							text-align center
							border-top-left-radius 3px
							border-top-right-radius 3px
						}
						.item-tips {
							position absolute
							right 0
							top 0.4rem
							width 1rem
							background-color #1977BC
							color white
							font-size 0.5rem
							text-align center
							border-bottom-left-radius 3px
							border-top-left-radius 3px
						}
					}
					
				}
				
			}
		}
		.mid{
			display flex
			height 100%
			flex-direction column
			justify-content center
			div{
				height 37%
				display flex
				justify-content center
				align-items flex-start
				span{
					font-size 0.64rem
					background-color #2D8796
					padding 0.1rem 0.4rem
					color white
					border-radius 4px
				}
			}
		}
	}
}

.item-3 {
	height $height_3
	width 100%
	background-color #84A942
	display flex
	justify-content space-between
	padding 0 0.6rem
	box-sizing border-box
	.list{
		display flex
		flex-direction column
		justify-content center
		img{
			height 2rem
			border-radius 50%
		}
		span{
			font-size 0.7rem
			color #ffffff
			text-align center
		}
	}
	.list:nth-child(3){
		img{
			height 3rem
		}
	}
}

.item-4 {
	height $height_4
	background-color #B76D3C
	display flex
	.left{
		height 100%
		flex 3
		display flex
		flex-direction column
		justify-content center
		align-items center
		span{
			color #FED6A9
			font-size 0.7rem
			line-height 1.3rem
		}
		.box{
			width 5rem
			height 1.2em
			display flex
			justify-content space-between
			align-items center
			background-color #6E3F2D
			border-radius 6px
			box-sizing border-box
			padding-left 0.2rem
			.recharge{
				height 100%
				display flex
				align-items center
				img{
					height 1rem
				}
			}
		}
	}
	.mid{
		flex 5
		display flex
		align-items center
		justify-content space-between
		.item{
			display flex
			flex-direction column
			align-items center
			img{
				height 1.2rem
			}
		}
	}
	.right{
		flex 2
	}
}

