@import "common/index.styl"
.content {
	background url("../img/bg-2.png") no-repeat
	background-size contain
	background-color #82A640
}

.item-1 {
	height $height_1
	width 100%
	.top {
		height 38%
		width 100%
		display flex
		justify-content flex-end
		box-sizing border-box
		align-items center
		.list {
			height 85%
			width 1.6rem
			margin-right 0.4rem
			.icon {
				height 1.4rem
				width 1.4rem
			}
		}
		.list:active {
			background-color #ab270e
			border-radius 50%
		}
	}
	.bot {
		height 62%
		width 100%
		display flex
		justify-content space-between
		box-sizing border-box
		padding 0 0.4rem
		align-items center
		.list {
			height 100%
			width 30%
		}
		.list:nth-child(1) {
			background url("../img/icon-1.png") center no-repeat
			background-size contain
		}
		.list:nth-child(2) {
			background url("../img/icon-2.png") center no-repeat
			background-size contain
		}
	}
}

.item-2 {
	height $height_2
	width 100%
	box-sizing border-box
	padding 0 0.4rem
//background-color #84A942
	.top {
		height 25%
		width 100%
		display flex
		flex-direction column
		justify-content center
		.list-1 {
			height 75%
			display flex
			justify-content space-around
			align-items flex-end
			.list-icon {
				border-radius 12px
				height 80%
				width 6rem
				background-color #FFD2AB
				border 2px solid #335C49
				box-sizing border-box
				position relative
				.list-type {
					position absolute
					bottom 0
					left 0
					right 0
					margin auto
					width 3rem
					font-size 0.6rem
					background-color black
					opacity 0.65
					color #ffffff
					text-align center
					border-top-left-radius 3px
					border-top-right-radius 3px
				}
				.list-tips {
					position absolute
					right 0
					top 0.6rem
					width 1rem
					background-color #1977BC
					color white
					font-size 0.5rem
					text-align center
					border-bottom-left-radius 3px
					border-top-left-radius 3px
				}
			}
			.list-icon:nth-child(2) {
				width 4.6rem
				background url("../img/small_cion/zainan (2).png") center no-repeat
				background-size contain
				background-color #FFD2AB
			}
			.list-icon:nth-child(1) {
				background url("../img/small_cion/yangzhiye (2).png") center no-repeat
				background-size contain
				background-color #FFD2AB
				
			}
			.list-icon:nth-child(3) {
				background url("../img/small_cion/zhongzhiye (2).png") center no-repeat
				background-size contain
				background-color #FFD2AB
			}
		}
		.list-2 {
			display flex
			justify-content space-between
			height 25%
			width 100%
			margin-top 1px
			padding 0 0.6rem
			box-sizing border-box
			.list-rate {
				font-size 0.7rem
				border-radius 3px
				display flex
				align-items center
				justify-content center
				height 65%
				width 2.4rem
				background-color #258897
				color white
			}
		}
		
	}
	
	.bot {
		height 75%
		width 100%
		display flex
		justify-content space-between
		.left, .right {
			width 44%
			height 100%
			.top-sub {
				display flex
				justify-content space-between
				align-items center
				height 25%
				.item {
					height 2.6rem
					width 48%
					background-color #848efa
					position relative
					.item-type {
						position absolute
						bottom: -0.4rem
						left 0
						right 0
						margin auto
						width 3rem
						font-size 0.6rem
						background-color black
						opacity 0.5
						color #ffffff
						text-align center
						border-top-left-radius 3px
						border-top-right-radius 3px
					}
					.item-tips {
						position absolute
						right 2px
						top 0.45rem
						width 1rem
						background-color #1977BC
						color white
						font-size 0.5rem
						text-align center
						border-bottom-left-radius 3px
						border-top-left-radius 3px
					}
				}
				
			}
			
			.bot-sub {
			//background-color #557F33
				height 75%
				display flex
				flex-wrap wrap
				justify-content space-between
				align-items center
				width 100%
				.bot-sub-left, .bot-sub-right {
					display flex
					flex-direction column
					width 48%
					height 100%
					justify-content space-around
					background-color #557F33
					align-items center
					border-radius 6px
					.item {
						height 2.6rem
						width 90%
						background-color #848efa
						position relative
						.item-type {
							position absolute
							bottom: -0.4rem
							left 0
							right 0
							margin auto
							width 3rem
							font-size 0.6rem
							background-color black
							opacity 0.5
							color #ffffff
							text-align center
							border-radius 3px
						}
						.item-tips {
							position absolute
							right -5%
							top 0.4rem
							width 1rem
							background-color #1977BC
							color white
							font-size 0.5rem
							text-align center
							border-bottom-left-radius 3px
							border-top-left-radius 3px
						}
					}
					
				}
				
			}
		}
		.left {
			.top-sub {
				.item:nth-child(1) {
					background url("../img/small_cion/jiachu (2).png") right no-repeat
					background-size contain
				}
				.item:nth-child(2) {
					background url("../img/small_cion/shuichan (2).png") right no-repeat
					background-size contain
				}
			}
			.bot-sub {
				.bot-sub-left {
					.item:nth-child(1) {
						background url("../img/small_cion/tuzhu.png") center no-repeat
						background-size contain
					}
					.item:nth-child(2) {
						background url("../img/small_cion/nainiu.png") center no-repeat
						background-size contain
					}
					.item:nth-child(3) {
						background url("../img/small_cion/muji.png") center no-repeat
						background-size contain
					}
				}
				.bot-sub-right {
					.item:nth-child(1) {
						background url("../img/small_cion/haiyu.png") center no-repeat
						background-size contain
					}
					.item:nth-child(2) {
						background url("../img/small_cion/hexia.png") center no-repeat
						background-size contain
					}
					.item:nth-child(3) {
						background url("../img/small_cion/pangxie.png") center no-repeat
						background-size contain
					}
				}
			}
		}
		.right {
			.top-sub {
				.item:nth-child(1) {
					background url("../img/small_cion/liangshi.png") right no-repeat
					background-size contain
				}
				.item:nth-child(2) {
					background url("../img/small_cion/shucai.png") right no-repeat
					background-size contain
				}
			}
			.bot-sub {
				.bot-sub-left {
					.item:nth-child(1) {
						background url("../img/small_cion/xiaomai.png") center no-repeat
						background-size contain
					}
					.item:nth-child(2) {
						background url("../img/small_cion/shuidao.png") center no-repeat
						background-size contain
					}
					.item:nth-child(3) {
						background url("../img/small_cion/yumi.png") center no-repeat
						background-size contain
					}
				}
				.bot-sub-right {
					.item:nth-child(1) {
						background url("../img/small_cion/qingcai.png") center no-repeat
						background-size contain
					}
					.item:nth-child(2) {
						background url("../img/small_cion/fanqie.png") center no-repeat
						background-size contain
					}
					.item:nth-child(3) {
						background url("../img/small_cion/wandou.png") center no-repeat
						background-size contain
					}
				}
			}
		}
		.mid {
			display flex
			height 100%
			flex-direction column
			justify-content center
			div {
				height 37%
				display flex
				justify-content center
				align-items flex-start
				span {
					font-size 0.64rem
					background-color #2D8796
					padding 0.1rem 0.4rem
					color white
					border-radius 4px
				}
			}
		}
	}
}

.item-3 {
	height $height_3
	width 100%
	background-color #84A942
	display flex
	justify-content space-between
	padding 0 0.6rem
	box-sizing border-box
	.list {
		display flex
		flex-direction column
		justify-content center
		position relative
		img {
			height 2rem
			border-radius 50%
		}
		img.gold {
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			margin auto
			height 1.5rem
		}
		span {
			font-size 0.7rem
			color #ffffff
			text-align center
		}
	}
	.list:nth-child(3) {
		img {
			height 3rem
		}
		img.gold {
			height 1.8rem
		}
	}
}

.item-4 {
	height $height_4
	background-color #B76D3C
	display flex
	align-items center
	justify-content center
	.left {
		height 100%
		flex 3
		display flex
		flex-direction column
		justify-content center
		align-items center
		span {
			color #FED6A9
			font-size 0.66rem
			line-height 1.2rem
		}
		.box {
			width 5rem
			height 1.2em
			display flex
			justify-content space-between
			align-items center
			background-color #6E3F2D
			border-radius 10px
			box-sizing border-box
			padding-left 0.2rem
			.recharge {
				height 100%
				display flex
				align-items center
				img {
					height 1rem
				}
			}
		}
	}
	.mid {
		flex 5
		display flex
		align-items center
		justify-content space-around
		.item {
			display flex
			flex-direction column
			align-items center
			img {
				height 1.3rem
				opacity 0.5
			}
			span {
				color #ffffff
				background-color #6E3F2D
				font-size 0.64rem
				padding 0 0.9rem
				border-radius 20px
				margin-top 0.1rem
			}
		}
		
		.active {
			img {
				opacity 1
				height 1.45rem
			}
			span {
				color #302cff
				background-color #c2e7ff
			}
		}
	}
	.right {
		flex 2
		display flex
		align-items center
		justify-content center
		.box {
			display flex
			flex-direction column
			height 2.3rem
			width 2.4rem
			border-radius 6px
			justify-content center
			align-items center
			box-shadow 0 4px 0 #955320
			background-color #6E3F2B
			span {
				font-size 0.64rem
				color #DAAC4F
			}
			
		}
		.box:active {
			box-shadow 0 0 0 #de0000
			background-color #5f3625
			span {
				color #957635
			}
		}
	}
}

.gold_icon{
	position absolute
	z-index 99
	bottom 5rem
	left 0
	right 0
	margin auto
	height 1.4rem
	width 1.4rem
	display none
	img{
		height 100%
	}
	
}

